{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"  
  },
  "hosting": {
    "public": "frontend/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs18",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ]
  },
  "emulators": {
    "auth": {
      "port": 4001,
      "host": "0.0.0.0"
    },
    "firestore": {
      "port": 4002,
      "host": "0.0.0.0"
    },
    "functions": {
      "port": 4003,
      "host": "0.0.0.0"
    },
    "hosting": {
      "port": 4000,
      "host": "0.0.0.0"
    },
    "ui": {
      "enabled": true,
      "port": 4004,
      "host": "0.0.0.0"
    },
    "singleProjectMode": true,
    "dataDir": ".firebase/emulator-data"
  }
}