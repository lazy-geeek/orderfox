# Binance API Configuration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CONFIG_JSON=path_to_firebase_service_account_json_file

# Development Environment
DEBUG=true
ENVIRONMENT=development

# Backend Configuration (PHP)
PHP_HOST=localhost
PHP_PORT=8000
WEBSOCKET_HOST=localhost
WEBSOCKET_PORT=8080

# Container Environment Variables
# Use these when running in Docker container
CONTAINER_PHP_HOST=0.0.0.0
CONTAINER_PHP_PORT=8000
CONTAINER_WEBSOCKET_HOST=0.0.0.0
CONTAINER_WEBSOCKET_PORT=8080
CONTAINER_FRONTEND_HOST=0.0.0.0
CONTAINER_FRONTEND_PORT=3000

# Frontend Environment Variables (Vite uses VITE_ prefix)
# For local development
VITE_APP_API_BASE_URL=http://localhost:8000/api/v1
VITE_APP_WS_BASE_URL=ws://localhost:8080

# For container development (when using container networking)
# VITE_APP_API_BASE_URL=http://localhost:8000/api/v1
# VITE_APP_WS_BASE_URL=ws://localhost:8080

# Firebase Emulator Configuration
FIREBASE_EMULATOR_HOST=localhost
FIRESTORE_EMULATOR_PORT=8080
FIREBASE_AUTH_EMULATOR_PORT=9099
FIREBASE_FUNCTIONS_EMULATOR_PORT=5001
FIREBASE_HOSTING_EMULATOR_PORT=5000

# Trading Configuration
DEFAULT_TRADING_MODE=paper
MAX_ORDERBOOK_LIMIT=5000

# Logging
LOG_LEVEL=debug